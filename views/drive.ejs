<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Drive</title>
  <link href="/output.css" rel="stylesheet">
</head>

<body class="bg-gray-100 min-h-screen">

  <!-- Header -->
  <%- include('partials/header') %>

  <!-- Main Content -->
  <main class="p-6">
    <h2 class="text-lg font-semibold text-gray-800 mb-4">My Drive</h2>
    
    <button id="openUploadModal" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded">
      Upload Files
    </button>
    <button id="openUploadFolderModal" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded">
      Upload Folder
    </button>

    <dialog id="uploadModal" class="rounded-lg shadow-xl max-w-md w-full p-0">
      <div class="fixed inset-0 z-50 flex items-center justify-center">
        <div id="modalFormWrapper" class="bg-white dark:bg-gray-900 dark:text-white p-6 rounded-lg">
        <!-- Close Button -->
          <form method="dialog" class="flex justify-end">
            <button id="closeUploadModal" class="bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-2 rounded text-sm">
              ✕
            </button>
          </form>

        <!-- Upload Form Partial -->
          <%- include('partials/upload-file-form') %>
        </div>
      </div>
    </dialog>

    <dialog id="uploadFolderModal" class="rounded-lg shadow-xl max-w-md w-full p-0">
      <div class="fixed inset-0 z-50 flex items-center justify-center">
        
        <div id="modalFormWrapper" class="bg-white dark:bg-gray-900 dark:text-white p-6 rounded-lg">
        <!-- Close Button -->
          <form method="dialog" class="flex justify-end">
            <button id="closeUploadFolderModal" class="bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-2 rounded text-sm">
              ✕
            </button>
          </form>

        <!-- Upload Form Partial -->
          <%- include('partials/upload-folder-form') %>
        </div>
      </div>
    </dialog>



    <!-- Directories -->
    <%- include('partials/folder-view', { folders }) %>

    <!-- Files -->
    <%- include('partials/file-view', { files, folderName }) %>
  </main>

</body>

<script>
  // Modal Script
  const uploadModal = document.getElementById('uploadModal');
  const uploadFolderModal = document.getElementById('uploadFolderModal');
  const openBtn = document.getElementById('openUploadModal');
  const closeBtn = document.getElementById('closeUploadModal');
  const openFolderBtn = document.getElementById('openUploadFolderModal');
  const closeFolderBtn = document.getElementById('closeUploadFolderModal');

  openBtn.addEventListener('click', () => {
    uploadModal.showModal();
  });

  closeBtn.addEventListener('click', () => {
    uploadModal.close();
  });

  openFolderBtn.addEventListener('click', () => {
    uploadFolderModal.showModal();
  });

  closeFolderBtn.addEventListener('click', () => {
    uploadFolderModal.close();
  });

  // File Display script
  const fileCards = document.querySelectorAll('[data-file-id]');
  fileCards.forEach(card => {
    card.addEventListener('click', () => {
      const fileId = card.getAttribute('data-file-id');
      console.log('File ID:', fileId);
      // Handle file card click (e.g., open file details)
      
    });
  });

</script>
</html>
